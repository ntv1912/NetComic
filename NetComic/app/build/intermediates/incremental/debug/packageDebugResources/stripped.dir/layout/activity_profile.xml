<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản và Bảo mật"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="10dp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/profile_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Ảnh đại diện"/>

    <ImageView
        android:id="@+id/profile_img"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/baseline_account_box_24"
        android:text="Ảnh đại diện "/>
    <TextView
        android:id="@+id/profile_name"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/taiKhoan"/>
    <TextView
        android:id="@+id/profile_email"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lienKetEmail"/>
    <TextView
        android:id="@+id/change_pass"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:text="@string/thayDoiMatKhau"/>

    <TextView
        android:id="@+id/remove_profile"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_navigate_next_24"
        android:text="@string/xoaTaiKhoan"/>
</androidx.appcompat.widget.LinearLayoutCompat>